<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginHorizontal="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/txt_userName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User android"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/txt_userName"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="textStart"
            android:id="@+id/txt_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gara gara banyak whitespacenya atau bagaimana? terus perlu masukkin ke dataset 1 message ini semua ga biar ga dianggap spam phising?"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>